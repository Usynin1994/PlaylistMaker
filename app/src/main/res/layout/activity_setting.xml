<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SettingLayoutStyle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/go_back"
            style="@style/SettingScreenGoBackStyle"
            />

        <TextView
            style="@style/SettingScreenTextStyle"
            android:text="@string/setting_screen"
            />

    </LinearLayout>

    <Switch
        android:id="@+id/switchDarkMode"
        style="@style/SettingScreenSwitchStyle"
        android:text="@string/dark_mode" />

    <Button
        style="@style/SettingScreenButtonStyle"
            android:id="@+id/buttonShareApp"
            android:layout_marginTop="12dp"
            android:paddingRight="4dp"
            android:text="@string/share_app"
            app:icon="@drawable/share_app"
            />

        <Button
            style="@style/SettingScreenButtonStyle"
            android:id="@+id/buttonSupport"
            android:paddingRight="4dp"
            android:text="@string/call_support"
            app:icon="@drawable/support"
            />

        <Button
            style="@style/SettingScreenButtonStyle"
            android:id="@+id/buttonUserAgreement"
            android:paddingRight="8dp"
            android:text="@string/agreement"
            app:icon="@drawable/agreement"
            />

</LinearLayout>