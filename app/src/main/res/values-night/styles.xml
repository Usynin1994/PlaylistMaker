<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayoutStyle">
        <item name="android:background">@color/black_main</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <style name="SettingLayoutStyle">
        <item name="android:background">@color/black_main</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <style name="SearchLayoutStyle">
        <item name="android:background">@color/black_main</item>
        <item name="android:padding">@dimen/layout_padding</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="backgroundTint">@color/blue_main</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColorHint">@color/grey_main</item>
    </style>

    <style name="SearchClearButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/white_main</item>
    </style>

    <style name="MainScreenTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SettingScreenTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SettingScreenGoBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="tint">@color/white_main</item>
    </style>

    <style name="SettingScreenSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/setting_button_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:trackTint">@color/blue_main</item>
        <item name="android:thumbTint">@color/blue_main</item>
    </style>

    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:backgroundTint">@color/white_main</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_main</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="SettingScreenButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/black_main</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white_main</item>
    </style>
</resources>