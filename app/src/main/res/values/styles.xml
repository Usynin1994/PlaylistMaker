<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenOuterLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white_main</item>
    </style>

    <style name="SettingScreenButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/white_main</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey_main</item>
    </style>

    <style name="SettingScreenSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/setting_button_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:trackTint">@color/grey_main</item>
        <item name="android:thumbTint">@color/grey_main</item>
    </style>

    <style name="ScreenHeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/small_search</item>
        <item name="android:drawableTint">@color/grey_main</item>
        <item name="android:background">@drawable/rectangle_rounded_all</item>
        <item name="android:backgroundTint">@color/grey_search_background</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">255</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textColorHint">@color/grey_main</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="tint">@color/grey_main</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>


    <!-- Track Card styles -->
    <style name="TrackNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/track_card_text_padding</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/point_padding</item>
        <item name="android:textColor">@color/grey_main</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TrackTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingRight">@dimen/track_card_text_padding</item>
        <item name="android:drawableStart">@drawable/point</item>
        <item name="android:drawablePadding">@dimen/point_padding</item>
        <item name="android:drawableTint">@color/grey_main</item>
        <item name="android:textColor">@color/grey_main</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArrowNextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_next</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/arrow_padding</item>
        <item name="tint">@color/grey_main</item>
    </style>

    <!-- Search Activity elements styles -->
    <style name="searchPlaceholderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/search_placeholder_margin</item>
        <item name="android:layout_marginTop">@dimen/placeholder_marginTop</item>
    </style>

    <style name="imageNotFoundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/not_found</item>
    </style>

    <style name="imageErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/error</item>
    </style>

    <style name="textErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/warning_text_size</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonReloadStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:backgroundTint">@color/black_main</item>
        <item name="android:text">@string/reload</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/reload_text_size</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/search_buttons_corner_radius</item>
    </style>

    <!-- Player Activity elements styles -->

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white_main</item>
    </style>

    <style name="PlayerTrackNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerArtistNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/player_band_name_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/reload_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/play_button_margin</item>
        <item name="android:foregroundTint">@color/black_main</item>
        <item name="android:backgroundTint">@color/white_main</item>
        <item name="android:elevation">0dp</item>
        <item name="fabCustomSize">@dimen/play_button_size</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FloatingButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/grey_main</item>
        <item name="fabCustomSize">@dimen/floating_button_size</item>
        <item name="tint">@color/white_main</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="PlayerTrackTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/reload_text_size</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/track_info_margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/song_info_text_size</item>
        <item name="android:textColor">@color/grey_main</item>
    </style>

    <style name="TrackInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/song_info_text_size</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <!-- Media Activity slyles -->

    <style name="TablayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_main</item>
        <item name="tabTextColor">@color/black_main</item>
        <item name="tabIndicatorColor">@color/black_main</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Navigation View Activity slyles -->

    <style name="NavigationViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_main</item>
        <item name="itemIconTint">@drawable/navigation_view_color</item>
        <item name="itemTextColor">@drawable/navigation_view_color</item>
        <item name="menu">@menu/bottom_nav_menu</item>
    </style>

</resources>